<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.opengl.GLSurfaceView
        android:id="@+id/clothView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_action_navigation_accept"
        android:background="@drawable/transparent_button"
        android:gravity="left|center_vertical"
        android:text="@string/setAsBackground"
        android:textColor="@color/text"
        android:drawablePadding="8dp"
        android:paddingLeft="8dp"
        android:onClick="setPattern"/>

    <RelativeLayout android:id="@+id/bestWrapper"
        style="@style/rel_best">
        <org.lucasr.twowayview.TwoWayView
            android:id="@+id/bestList"
            style="@style/two_way_best"/>
        <TextView style="@style/text"
            android:text="Best"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/latestWrapper"
        style="@style/rel_latest">
        <org.lucasr.twowayview.TwoWayView
            android:id="@+id/latestList"
            style="@style/two_way_latest"/>
        <TextView
            style="@style/text"
            android:text="Latest"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/rel_random">
        <org.lucasr.twowayview.TwoWayView
            android:id="@+id/randomList"
            style="@style/two_way_random"/>
        <TextView
            style="@style/text"
            android:text="Random"/>
    </RelativeLayout>

</RelativeLayout>