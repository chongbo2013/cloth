<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@color/transparent_dark_grey</item>

        <!-- Support library compatibility -->
        <item name="icon">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="background">@color/transparent_dark_grey</item>
    </style>


    <style name="DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@color/transparent_dark_grey</item>
    </style>
</resources>
